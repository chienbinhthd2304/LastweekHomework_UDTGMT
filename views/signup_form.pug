extends layout


block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', name='username' required='true' value=(undefined===user ? '' : username) )
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text', name='email' required='true' value=(undefined===user ? '' : email) )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password' required='true' value=(undefined===user ? '' : password) )
    div.form-group
      label(for='confirm_password') Confirm password:
      input#confirm_password.form-control(type='password', name='confirm_password' required='true' value=(undefined===user ? '' : confirm_password) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg